@model IEnumerable<OrdinationApp.Models.Member>;

<form method="post" asp-controller="Payments" asp-action="FillMember">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label>Enter Membership Id: </label>
        <input class="form-control" name="membershipId" id="membershipId" type="text" />
    </div>
    <button class="btn btn-primary" type="submit">Fill</button>
</form>


@if (Model != null)
{
    <table class="table table-striped">
        <thead>
            <th>Membership Id</th>
            <th>Name</th>
            <th></th>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>@obj.MemberShipId</td>
                    <td> @obj.Surname @obj.FirstName @obj.Othername</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No members added yet</p>
}

<a asp-controller="Payments" asp-action="SavePayments" class="btn btn-primary">Save</a>