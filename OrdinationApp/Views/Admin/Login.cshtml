@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
@model OrdinationApp.ViewModels.LoginViewModel;


<div class="container">
    <div class="card w-50 mx-auto login">
        <div class="card-body">
            <div>
                <h3 class="text-center mb-3">Login</h3>
            </div>

            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="mb-3">
                    <label class="form-label">Username:</label>
                    <input asp-for="UserName" class="form-control" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password:</label>
                    <input asp-for="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div>
                    <a asp-controller="Admin" asp-action="ForgotPassword" class="text-danger">Forgot Password</a>
                </div>
                <button type="submit" class="btn btn-success w-25 mx-auto d-block">Login</button>
            </form>
        </div>
    </div>
</div>