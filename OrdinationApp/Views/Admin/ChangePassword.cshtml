@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model OrdinationApp.ViewModels.ChangePasswordViewModel;

<section>
    <div class="container">
        <div class="card w-50 mx-auto login">
            <h4 class="text-center my-3">Reset Password</h4>
            <div class="card-body">
                <form method="post">
                    <input hidden asp-for="userName" />
                    <div class="form-group mb-5">
                        <label>Current Password: </label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" />
                        <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                    </div>
                    <div class="form-group mb-5">
                        <label>New Password: </label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="NewPassword"></span>
                    </div>
                    <div class="form-group mb-5">
                        <label>Comfirm New Password:</label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
                    </div>
                    <button class="btn btn-success" type="submit">Save Changes</button>
                </form>
            </div>
        </div>
    </div>

</section>