
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrdinationApp</title>
    <link rel="stylesheet" href="~/css//bootwatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrdinationApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Ubuntu" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/flickerty/flickerty.css">
</head>
<body class="mb-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ESOCS Tracker <br />App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end" style="padding-right:90px;">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown">Approvals</a>
                            <ul class="dropdown-menu bg-secondary">
                                <li><a class="text-light nav-link dropdown-item" asp-controller="Approvals" asp-action="SingleUpload">Add Single Member</a></li>
                                <li><a class="text-light nav-link dropdown-item" asp-controller="Approvals" asp-action="BulkUpload">Bulk Upload Approvals</a></li>
                                <li><a asp-controller="Approvals" asp-action="Index" class="text-light nav-link dropdown-item">View Approvals</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown">Users</a>
                            <ul class="dropdown-menu bg-secondary">
                                <li><a class="text-light nav-link dropdown-item" asp-controller="Admin" asp-action="Register">Register New User</a></li>
                                <li><a asp-controller="Admin" asp-action="Logout" class="text-light nav-link dropdown-item">Logout</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-light dropdown-toggle" data-bs-toggle="dropdown">Datas</a>
                            <ul class="dropdown-menu bg-secondary">
                                <li><a class="text-light nav-link dropdown-item" asp-controller="Data" asp-action="ManageProvinces">Provinces</a></li>
                                <li><a class="text-light nav-link dropdown-item" asp-controller="Data" asp-action="ManageBills">Bills</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mb-0 footer position-relative bg-secondary lh-1">
        <div class="container p-4">
            <div class="row d-flex justify-content-between">
                <div class="col-md-3 col-sm-12">
                    <h3>Address</h3>
                    <p><b>National HQ:</b> 9/11, Pearse street, Surulere, Lagos</p>
                    <p><b>General HQ:</b> 11, Odunfa street, Ebute-Metta, Lagos</p>
                </div>
                <div class="col-md-3 col-sm-12">
                    <h3>Socials</h3>
                    <p>Facebook: <a class="text-primary" href="https://www.facebook.com/ESOCSMZGHQ/"><i class="bi bi-facebook"></i></a></p>
                    <p>Instagram: <a class="text-primary" href="https://www.instagram.com/esocs_instablog/"><i class="bi bi-instagram"></i></a></p>
                    <p>Twitter:<a class="text-primary" href="https://twitter.com/esocschurch?lang=en"><i class="bi bi-twitter"></i></a></p>
                </div>
                <div class="col-md-3 col-sm-12">
                    <h3>Copyrights</h3>
                    <p>&copy; Soft Solution Concepts.</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/flickerty/flickerty.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
